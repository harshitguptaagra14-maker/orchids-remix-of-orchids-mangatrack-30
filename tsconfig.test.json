{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "isolatedModules": false,
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "noEmit": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": [
    "next-env.d.ts",
    "src/__tests__/**/*.ts",
    "src/__tests__/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "jest.setup.js",
    "jest.config.js"
  ],
  "exclude": [
    "node_modules",
    "scripts/test/**/*.ts"
  ]
}
